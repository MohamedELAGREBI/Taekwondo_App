<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaekwondoApp.Pages.KibonPage"
             Title="KibonPage">
    <VerticalStackLayout>
        <Label
                x:Name="nombreSeqLabel"/>
        <Label
                x:Name="nombreTecLabel"/>
        
        <Grid
            RowDefinitions="*"
            ColumnDefinitions="Auto, Auto, Auto">

            <Button
                x:Name="kibonPrecedentButton"
                Text="&lt;&lt;"
                Grid.Column="0"
                Grid.Row="0"/>

            <Label
                x:Name="kibonLabel"
                Text="Kibon à réaliser"
                Grid.Column="1"
                Grid.Row="0"/>

            <Button
                x:Name="kibonSuivantButton"
                Text=">>"
                Grid.Column="2"
                Grid.Row="0"/>

        </Grid>

        <Button
            x:Name="versExplicationsKibonsButton"
            Text="Voir les explications"/>

        <Button
            x:Name="terminerButton"
            Text="Terminer"/>
        
    </VerticalStackLayout>
</ContentPage>